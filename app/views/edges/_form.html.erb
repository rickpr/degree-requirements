<%= bootstrap_form_for(@edge) do |f| %>
    <% opter = proc { |x| [x.name, x.id] } %>
    <%= f.select :parent, options_for_select(Requirement.where(type: nil).map(&opter)) %>
    <%= f.select :child, options_for_select(Requirement.all.map(&opter)) %>
    <%= f.submit %>
<% end %>

<script>
$('select').select2();
</script>
