<p id="notice"><%= notice %></p>

<h1>Listing Requirements</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Min grade</th>
      <th>Hours</th>
      <th>Take</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.name %></td>
        <td><%= requirement.min_grade %></td>
        <td><%= requirement.hours %></td>
        <td><%= requirement.take %></td>
        <td><%= requirement.type %></td>
        <td><%= link_to 'Show', requirement %></td>
        <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
        <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @requirements %>

<%= link_to 'New Requirement', new_requirement_path %>
